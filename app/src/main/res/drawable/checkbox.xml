<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/be" android:state_checked="false" android:state_enabled="true" android:state_pressed="false"/>
    <item android:drawable="@drawable/bd" android:state_checked="false" android:state_enabled="false" android:state_pressed="false"/>
    <item android:state_checked="true" android:state_enabled="true" android:state_pressed="false"><layer-list>
            <item android:drawable="@drawable/be"/>
            <item android:drawable="@drawable/ce"/>
        </layer-list></item>
    <item android:state_checked="true" android:state_enabled="false" android:state_pressed="false"><layer-list>
            <item android:drawable="@drawable/bd"/>
            <item android:drawable="@drawable/cd"/>
        </layer-list></item>
    <item android:drawable="@drawable/bep" android:state_checked="false" android:state_pressed="true"/>
    <item android:state_checked="true" android:state_pressed="true"><layer-list>
            <item android:drawable="@drawable/bep"/>
            <item android:drawable="@drawable/ce"/>
        </layer-list></item>

</selector>