<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:text="@string/alert_when_whisp_comes" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox2"
            android:layout_marginTop="6dp"
            android:text="@string/keep_wifi_on"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox2"
            android:layout_marginTop="6dp"
            android:text="@string/reconnect"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/checkBox4"
            android:layout_marginTop="6dp"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/editText1"
            android:layout_toLeftOf="@+id/editText1"
            android:gravity="center"
            android:text="@string/num_of_chats"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox4"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/w3"
                android:text="@string/W3XP_1285" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/w3"
                android:text="@string/W3XP_126A" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/w2"
                android:text="@string/W2BN_202B" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup1"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:hint="@string/gateway" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editText2"
            android:gravity="center_vertical"
            android:text="@string/chat_buffer" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText2"
            android:gravity="center"
            android:inputType="none" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/editText2"
            android:layout_toLeftOf="@+id/editText3"
            android:layout_toRightOf="@+id/textView2"
            android:max="200"
            android:progressDrawable="@drawable/slider"
            android:thumb="@drawable/thumb"
            android:thumbOffset="-3dp" />
    </RelativeLayout>

</ScrollView>